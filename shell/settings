#!/usr/bin/env bash

# Make vim the default editor.
if  [ -n "$NVIM_LISTEN_ADDRESS" ]; then
  export VISUAL="nvr -cc split --remote-wait +'set bufhidden=wipe'"
else
  export VISUAL="nvim"
fi

export EDITOR=$VISUAL

set -o vi

# TODO: Remove once libraries are updated
export RUBYOPT='-W:no-deprecated -W:no-experimental'

# Enable persistent REPL history for `node`.
NODE_REPL_HISTORY_FILE=~/.node_history;
# Allow 32³ entries; the default is 1000.
NODE_REPL_HISTORY_SIZE='32768';

# Ensure Homebrew's node is unlinked to prevent conflicts with asdf-nodejs.
# Homebrew node is installed as a dependency of other packages (vercel-cli, neonctl, etc.)
# but its npm has prefix=/opt/homebrew baked in, which breaks asdf's npm wrapper.
# This silently unlinks node if it's linked, ensuring global npm installs go to the right place.
if [ -L /opt/homebrew/bin/npm ]; then
  brew unlink node >/dev/null 2>&1 || true
fi


# Increase Bash history size. Allow 32³ entries; the default is 500.
export HISTSIZE='32768';

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Always enable colored `grep` output.
export GREP_OPTIONS='--color=auto';

export PGUSER="postgres"
export PGHOST="localhost"

if [ -f ~/.shell/settings.local ]; then
    source ~/.shell/settings.local
fi
