#!/usr/bin/env bash

# # FZF Configurations
fzf-file-open-widget() {
  local output
  output=$(__fzf_select) && vim "${output:0:-1}" < /dev/tty

  local ret=$?
  zle reset-prompt
  return $ret
}
zle     -N   fzf-file-open-widget
bindkey '\C-f' fzf-file-open-widget

eval "$(gh copilot alias -- zsh)"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/markfaga/Downloads/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/markfaga/Downloads/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/markfaga/Downloads/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/markfaga/Downloads/google-cloud-sdk/completion.zsh.inc'; fi

if [ -f ~/.zsh/plugins.local ]; then
    source ~/.zsh/plugins.local
fi
